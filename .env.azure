# Azure App Service Environment Configuration
# These environment variables should be set in the Azure Portal

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Application Settings
SECRET_KEY=your-secure-secret-key-here

# Database Configuration (if using Azure SQL Database)
# DATABASE_URL=sqlite:///ai_learning.db

# Admin Configuration
ADMIN_PASSWORD=your-admin-password-here

# Azure Storage (if needed)
# AZURE_STORAGE_CONNECTION_STRING=your-connection-string-here
# AZURE_STORAGE_CONTAINER_NAME=ai-learning-data

# Session Configuration
SESSION_TIMEOUT=3600
PASSWORD_MIN_LENGTH=8

# Security Settings
PRODUCTION_MODE=true

# Logging Configuration
LOG_LEVEL=INFO
