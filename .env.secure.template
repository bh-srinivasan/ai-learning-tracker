# Secure Environment Configuration Template
# Copy this to .env and set your actual values
# NEVER commit .env files to version control!

# Azure SQL Database Configuration
AZURE_SQL_SERVER=ai-learning-sql-centralus.database.windows.net
AZURE_SQL_DATABASE=ai-learning-db
AZURE_SQL_USERNAME=ailearningadmin
AZURE_SQL_PASSWORD=your_secure_azure_sql_password_here

# Application Secrets
SECRET_KEY=your_ultra_secure_secret_key_at_least_32_characters_long
ADMIN_PASSWORD=your_secure_admin_password_here
DEMO_PASSWORD=your_secure_demo_password_here
TEST_PASSWORD=your_test_password_here

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Security Settings
SESSION_TIMEOUT=3600
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5

# Azure Storage (if needed)
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Development/Testing flags
ENABLE_DEBUG=False
ENABLE_TEST_ROUTES=False
